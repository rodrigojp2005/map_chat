APP_NAME=MapChat
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=map_chat
DB_USERNAME=root
DB_PASSWORD=

# Cache / Queue / Session / Filesystem
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (dev defaults using MailHog/Mailpit)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@localhost"
MAIL_FROM_NAME="${APP_NAME}"

# Google APIs
GOOGLE_MAPS_API_KEY=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL="http://localhost:8000/auth/google/callback"

# Web Push (VAPID)
VAPID_SUBJECT="mailto:you@example.com"
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
# Optional PEM file path if needed
VAPID_PEM_FILE=

# Other
# APP_LOCALE=pt_BR
# TIMEZONE=America/Sao_Paulo
