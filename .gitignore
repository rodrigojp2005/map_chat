# === DEPENDÊNCIAS (não versionar) ===
/vendor/
/node_modules/
composer.phar

# === AMBIENTE (cada servidor tem o seu .env) ===
.env
.env.*
!.env.example

# === CACHE & STORAGE (arquivos temporários, regenerados pelo Laravel) ===
/storage/*.key
/storage/app/public
/storage/framework/cache/**
/storage/framework/sessions/**
/storage/framework/views/**
/storage/framework/testing/**
/storage/logs/**
/bootstrap/cache/*

# Manter a pasta, mas ignorar os arquivos
!/storage/app/public/.gitignore
!/bootstrap/cache/.gitignore

# === FRONTEND (gerados no build local, não enviar) ===
/public/build/
/public/hot
/public/mix-manifest.json

# === LOGS & DEBUG ===
*.log
npm-debug.log*
yarn-debug.log*
pnpm-debug.log*

# === IDE / SISTEMA OPERACIONAL ===
/.idea/
/.vscode/
.DS_Store
Thumbs.db

# === TESTES & COVERAGE ===
coverage/
.phpunit.result.cache
.phpunit.cache
clover.xml
junit.xml

# === DOCKER / SAIL (se usar) ===
.docker
docker-compose.override.yml
